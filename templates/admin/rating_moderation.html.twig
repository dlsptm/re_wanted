{% extends 'backoffice.html.twig' %}

{% block body %}

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th>Date</th>
            <th>Note</th>
            <th>Commentaire</th>
            <th>Changer publication</th>

        </tr>
        </thead>
        <tbody>
        {% for rating  in ratings %}


            <tr>
                <td>{{ rating.publishDate.format('d/m/Y') }}</td>
                <td>{{ rating.rate ~ '/5' }}</td>
                <td>{{ rating.comment }}</td>
                <td>
                    {% if rating.publish %}
                        <a href="{{ path('publish_edit', {'id': rating.id}) }}" class="btn btn-warning">Retirer</a>
                    {% else %}
                        <a href="{{ path('publish_edit', {'id': rating.id}) }}" class="btn btn-info">Publier</a>
                    {% endif %}

                </td>


            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block title %}

{% endblock %}

