{% extends 'backoffice.html.twig' %}

 {% block stylesheet %}
     {{ parent() }}
     <link rel="stylesheet" href="{{ asset('css/select2.css') }}">
 {% endblock %}

{% block body %}
   <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <p>Nombre de utilisateurs dans la table: {{ users | length }}</p>
    <div>

        {% if users | length > 0 %}
        <div>
        <table class="table table-dark">
        <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col" class="text-center">Pseudo</th>
            <th scope="col" class="text-center">Email</th>
            <th scope="col" class="text-center">Active</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
        
        {% for user in users %}
        <tr>
            <th scope="row">{{ user.id }}</th>
            <td>{{ user.nickname }}</td>
            <td>{{ user.email }}</td>
            <td class="text-center">{{ user.active }}</td>
            <td>
                {# <a href="{{url('user_detail', {'id': user.id})}}" class="btn btn-warning">GÃ©rer le produit</a> #}
            </td>
        </tr>
        {% endfor %}
        </table>
        </div>
        {% else %}
          <p>Aucun utilisateur pour l'instant</p>
        {% endif %}
    </div>
</div>
{% endblock %}